<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#ECE9DF"
    android:paddingBottom="56dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:paddingBottom="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редактирование сеансов:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <AutoCompleteTextView
            android:id="@+id/editMovieName"
            android:hint="Выберите фильм"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <!-- Добавляем ListView под автокомплит -->
        <ListView
            android:id="@+id/listViewMovies"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#FFF9E5"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/editSessionDate"
            android:hint="Дата (напр. 2025-06-10)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:inputType="date" />

        <EditText
            android:id="@+id/editSessionTime"
            android:hint="Время (напр. 18:00)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:inputType="time" />

        <EditText
            android:id="@+id/editHallNumber"
            android:hint="Номер зала"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTicketPrice"
            android:hint="Цена билета"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editSessionId"
            android:hint="ID сеанса"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:inputType="text" />

        <Button
            android:id="@+id/buttonAddSession"
            android:text="Добавить сеанс"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="#F5C85C"
            android:textColor="#000000"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonDeleteSession"
            android:text="Удалить сеанс по ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="#F5C85C"
            android:textColor="#000000"
            android:textSize="18sp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
